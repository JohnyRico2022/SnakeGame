<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--   standard item for setting __linearLayout__  -->
    <style name="LinearLayoutSettingItem">
        <item name="android:layout_height">@dimen/is_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/background_white</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--   linearLayout button back   -->
    <style name="LinearLayoutButtonBack">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/lbb_margin_top</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--   TextView button back   -->
    <style name="TextViewButtonBack">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/lbb_margin_start_nested_element</item>
        <item name="android:layout_marginEnd">@dimen/lbb_margin_end_nested_element</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!--   ImageView button back   -->
    <style name="ImageViewButtonBack">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/lbb_margin_start_nested_element</item>
        <item name="android:tint">@color/black</item>
    </style>
</resources>